{
	"name": "@repo/api",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "wrangler dev --persist-to ../../data",
		"deploy": "pnpm generate-types && wrangler deploy",
		"check": "tsc --noEmit",
		"lint": "oxlint --type-aware",
		"test": "vitest run",
		"codegen": "pnpm generate-types",
		"generate-types": "wrangler types ./src/generated/workers.d.ts --config ./wrangler.jsonc && prettier --write ./src/generated"
	},
	"dependencies": {
		"@repo/rng": "workspace:*",
		"@repo/state": "workspace:*",
		"xstate": "catalog:"
	},
	"devDependencies": {
		"typescript": "catalog:",
		"vitest": "catalog:",
		"wrangler": "catalog:"
	},
	"engines": {
		"node": "25.2.0"
	},
	"packageManager": "pnpm@10.22.0"
}
